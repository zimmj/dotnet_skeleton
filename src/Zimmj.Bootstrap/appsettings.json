{

  "MongoInformation": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "SkelletonDatabase"
  },

  "HouseStoreDatabaseSettings": {
    "CollectionName": "Houses"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Enrichers.Environment",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ]
  },
  "AllowedHosts": "*"
}
